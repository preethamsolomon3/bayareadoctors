<p id="notice"><%= notice %></p>

<h1>Availability Periods</h1>

<table>
  <thead>
    <tr>
      <th>Start time</th>
      <th>End time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @availability_periods.each do |availability_period| %>
      <tr>
        <td><%= availability_period.start_time %></td>
        <td><%= availability_period.end_time %></td>
        <td><%= link_to 'Show', availability_period %></td>
        <td><%= link_to 'Edit', edit_availability_period_path(availability_period) %></td>
        <td><%= link_to 'Destroy', availability_period, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Availability Period', new_availability_period_path %>
